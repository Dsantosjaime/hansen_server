generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  keycloakId String   @unique
  email      String?
  name       String?

  roleId     String? @db.ObjectId
  role       Role?   @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Permission {
  subject String // "Post"
  action  String // "create"
}

type PermissionSubGroup {
  name          String
  permissions   Permission[]
}

model PermissionGroup {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  name                String   @unique
  permissionSubGroup  PermissionSubGroup[]
}

model Role {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  permissions Permission[]

  isSystem    Boolean      @default(false)

  users       User[]
  @@index([name])
}

model Group {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  subGroups SubGroup[]
}

model SubGroup {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String

  groupId String @db.ObjectId
  group   Group  @relation(fields: [groupId], references: [id])

  brevoListId Int? 

  @@index([groupId])
}

model Contact {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  function    String
  status      String
  email       String @unique
  phoneNumber String[]
  lastContact String
  lastEmail   String
  groupId     String @db.ObjectId
  subGroupId  String @db.ObjectId
}

model EmailSend {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId

  contactId       String?  @db.ObjectId
  email           String
  brevoCampaignId String
  subject         String
  status          String

  sentAt          DateTime?
  deliveredAt     DateTime?
  openedAt        DateTime?
  clickedAt       DateTime?
  bouncedAt       DateTime?
  unsubscribedAt  DateTime?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([contactId])
  @@index([email])
  @@index([brevoCampaignId])
  @@unique([brevoCampaignId, email])
}

model CampaignAttachment {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  token      String   @unique
  filename   String
  mimeType   String
  size       Int
  path       String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
}
